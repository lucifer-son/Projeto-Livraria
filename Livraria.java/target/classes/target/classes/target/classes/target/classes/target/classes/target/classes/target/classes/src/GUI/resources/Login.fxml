<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="40" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <ImageView fx:id="logoImageView" fitHeight="350.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <!-- Caminho corrigido para a imagem -->
                <Image url="@Imagens/livrarialogo.jpg" />
            </image>
        </ImageView>
        <VBox alignment="CENTER" spacing="12.0">
            <children>
                <Label styleClass="title" text="Sejam Bem-vindos" />
                <TextField fx:id="emailField" promptText="E-mail" />
                <PasswordField fx:id="passwordField" promptText="Senha" />
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <CheckBox fx:id="rememberMeCheckBox" mnemonicParsing="false" text="Lembrar-me" />
                        <Hyperlink onAction="#onForgotPassword" text="Esqueceu a Senha?" />
                    </children>
                </HBox>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onLogin" prefWidth="200.0" text="Entrar" />
                <Separator prefWidth="200.0" />
                <Label text="Ou entre utilizando:" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" text="Google" />
                        <Button mnemonicParsing="false" text="Facebook" />
                    </children>
                </HBox>
                <Hyperlink onAction="#onCreateNewUser" text="Novo Por Aqui? Crie sua Conta" />
                <Label fx:id="errorLabel" textFill="#1d0d80" />
            </children>
            <effect>
                <Glow level="0.37" />
            </effect>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </children>
</HBox>
