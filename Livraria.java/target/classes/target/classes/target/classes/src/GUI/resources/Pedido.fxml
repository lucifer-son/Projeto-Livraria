<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.controllers.PedidosController" spacing="8">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ToolBar>
        <Button onAction="#goBack" text="Voltar" />
        <Label styleClass="title" text="Pedido e Devoluções" />
    </ToolBar>

    <TableView fx:id="pedidosTable">
        <columns>
            <TableColumn fx:id="colPedidoId" text="ID" />
            <TableColumn fx:id="colCliente" text="Cliente" />
            <TableColumn fx:id="colData" text="Data" />
            <TableColumn fx:id="colValor" text="Valor" />
            <TableColumn fx:id="colStatus" text="Status" />
        </columns>
    </TableView>

    <HBox spacing="8">
        <Button onAction="#verDetalhes" text="Ver Detalhes" />
        <Button onAction="#registrarDevolucao" text="Registrar Devolução" />
        <Button onAction="#atualizarStatus" text="Atualizar Status" />
    </HBox>
</VBox>
