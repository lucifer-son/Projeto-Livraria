<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.controladores.PagamentoController" spacing="8">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ToolBar>
        <Button onAction="#goBack" text="Voltar" />
        <Label styleClass="title" text="Pagamento" />
    </ToolBar>

    <Label text="Resumo do Pedido" />
    <TextArea fx:id="resumoArea" editable="false" prefRowCount="6" />

    <Label text="Forma de pagamento" />
    <ChoiceBox fx:id="metodoChoice" />
    <TextField fx:id="cartaoField" promptText="Número do Cartão (apenas se necessário)" />

    <HBox spacing="8">
        <Button onAction="#onPagar" text="Pagar" />
        <Button onAction="#goBack" text="Cancelar" />
    </HBox>
</VBox>
